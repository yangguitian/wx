/* pages/my/my.wxss */
.bg {
  position: relative;
  width: 100%;
  height: 200px;
  background-color: #f06c7a;
  border-radius: 0 0 9% 9%;
}
.btn-area {
  width: 100%;
  height: 70px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon01 {
  position: absolute;
  right: 20px;
  top: 10px;
  color: rgb(255, 255, 255);
}
.box-user {
  position: absolute;
  width: 100%;
  height: 130px;
  top: 50px;
}
.user-icon {
  display: inline-block;
  width: 100px;
  height: 100px;
  background-color: rgb(255, 255, 255);
  border-radius: 50%;
}
.user-name {
  position: absolute;
  top: 40px;
  left: 260;
  font-size: 35rpx;
  color: rgb(255, 255, 255);
}
.btn {
  color: white;
  width: 150px;
  height: 50px;
  background-color: #ffb600;
}
.box-tool {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
}
.box-title {
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 80rpx;
}
.menu {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
  background-color: white;
}

.menubtn {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  align-items: center;
  margin: 15rpx;
}

.menuicon {
  width: 100rpx;
  height: 100rpx;
}

.menutext {
  margin: 6rpx;
  color: #444444;
  font-size: 20rpx;
  font-weight: 400;
}