/* pages/home/home.wxss */
.swiper {
  margin: 10px auto;
  border-radius: 10px;
  box-shadow: 3px 10px 10px #b3a8a8;
  width: 95%;
  height: 130px;
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.swiper-img {
  border-radius: 10px;
  width: 100%;
  height: 100%;
}
.menu {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10px;
  background-color: white;
}

.menubtn {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  align-items: center;
  margin: 15rpx;
}

.menuicon {
  width: 100rpx;
  height: 100rpx;
}

.menutext {
  margin: 6rpx;
  color: #444444;
  font-size: 20rpx;
  font-weight: 400;
  text-align: center;
}
.welfare {
  margin: 0 auto;
  border-top: 1px solid #ccc;
  width: 95%;
  height: 700rpx;
}
.welfare-font {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.welfare-font-box {
  position: absolute;
  bottom: 15rpx;
  font-size: 35rpx;
}
.welfare-showboxs {
  width: 100%;
  background-color: #fff;
}
.welfare-showbox {
  float: left;
  padding: 10rpx;
  margin: 10rpx;
  width: 320rpx;
  height: 250rpx;
  background-color: #ebf9f9;
}
.welfare-showbox-font {
  float: left;
  width: 150rpx;
  height: 100%;
}
.top {
  font-size: 35rpx;
  margin-left: 20rpx;
}
.middle {
  font-size: 20rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: #666;
}
.button {
  margin-top: 120rpx;
  color: #666;
  font-size: 25rpx;
  margin-left: 25rpx;
}
.welfare-picbox {
  margin: 35rpx 0;
  float: left;
  width: 150rpx;
  height: 150rpx;
}
.welfare-image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
}
.recommend-box {
  width: 100%;
  height: 40px;
}
.recommend-title {
  color: #ff5a01;
  text-align: center;
  line-height: 40px;
}
.recommend-title image {
  width: 30px;
  height: 30px;
  z-index: 999;
}
.asd{
  text-align: left;
}
.van-grid-item__content {
  background-color: rgb(223, 27, 27);
  /* border: 1px solid #666; */
  margin: 10rpx;
  box-shadow: 3px 0px 10px #b3a8a8;
  border-radius: 10px;
}
.img {
  width: 100%;
  height: 200px;
  overflow: hidden;
}
.van-grid-item__content image {
  width: 100%;
  border-radius: 10px;
}
text {
  font-size:25rpx;
  width: 100%;
  height: 30px;
  text-align: left;
}
.text {
  margin: 10rpx;
}
.price {
  color: red;
}
