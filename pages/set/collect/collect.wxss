/* pages/set/collect/collect.wxss */
page{
  position: relative;
  background-color: #f8f8f8;
}
.van-card__header {
  width: 100%;
  height: 140px;
  background-color: #fff;
  padding: 10px;
  border-bottom: 1px solid #dedede;
}
.van-card {
  padding: 0 !important;
}
.van-card__thumb {
  width: 100%;
  height: 200px;
}
.van-card__img {
  width: 140px !important;
  height: 140px !important;
  border-radius: 10% !important;
}
.van-card__content {
  margin: 15px;
  margin-left: 50px;
}
.van-card__title {
  font-size: 1.7em;
  width: 170px;
  line-height: 25px !important;
}
.van-card__desc {
  margin-top: 15px;
  width: 170px;
}
.van-card__bottom {
  text-align: right;
  margin-right: 30px;
}
.van-card__price  {
  font-size: var(--card-price-font-size,23px) !important;
}
.van-card__price-integer {
  font-size: var(--card-price-integer-font-size,21px) !important;
}
.van-button {
  position: absolute;
  top: -140px;
  right: 30px;
}
.footer {
  height: 0;
}
