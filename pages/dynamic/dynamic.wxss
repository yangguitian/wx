/* pages/dynamic/dynamic.wxss */
page {
  background-color: #eeeeee;
}
.top-big-box {
  width: 100%;
  height: 80rpx;
  background-color: white;
}
.big-box-title {
  font-size: 1.2em;
  font-weight: bold;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  text-align: center;
}
.swiper {
  width: 100%;
  height: 175px;
}
.swiper-item {
  width: 100%;
}
.img {
  width: 100%;
}
.big-box {
  width: 95%;
  /* height: 200px; */
  margin: 0px auto;
}
.new-box {
  border-radius: 15px 15px;
  border-radius: 10%;
  width: 100%;
  height: 200px;
  margin: 40px 0;
}
.time {
  margin-top:50px;
  text-align: center;
  font-size: .8em;
  color: #666;
}
.pic {
  overflow: hidden;
  border-radius: 15px 15px 0 0;
  width: 100%;
  height: 160px;
}
.pic image {
  width: 100%;
}
.text {
  border-radius: 0 0 15px 15px ;
  width: 100%;
  background-color: white;
}
.text view {
  padding: 5px 10px;
  letter-spacing: 1.5px;
}
